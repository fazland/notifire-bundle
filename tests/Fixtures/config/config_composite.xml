<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:framework="http://symfony.com/schema/dic/symfony"
           xmlns:swiftmailer="http://symfony.com/schema/dic/swiftmailer"
           xmlns:notifire="http://fazland.com/schema/dic/notifire"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
               http://symfony.com/schema/dic/services/services-1.0.xsd
               http://symfony.com/schema/dic/symfony
               http://symfony.com/schema/dic/symfony/symfony-1.0.xsd"
    >

    <services>
        <service class="Fazland\NotifireBundle\Tests\Fixtures\TestBundle\ServiceHolder" id="email_service_holder" public="true">
            <argument type="service" id="fazland.notifire.handler.email.default" on-invalid="null" />
        </service>
        <service id="logger" class="Psr\Log\NullLogger" />
    </services>

    <framework:config secret="test" test="true">
        <framework:session storage-id="session.storage.filesystem" />
        <framework:csrf-protection enabled="false" />
        <framework:templating>
            <framework:engine>twig</framework:engine>
        </framework:templating>
        <framework:router resource="%kernel.root_dir%/config/routing.xml" />
    </framework:config>

    <swiftmailer:config default-mailer="second_mailer">
        <swiftmailer:mailer name="first_mailer" transport="smtp" />
        <swiftmailer:mailer name="second_mailer" />
    </swiftmailer:config>

    <notifire:config>
        <notifire:email enabled="true" auto_configure_swiftmailer="false">
            <notifire:mailer name="first_mailer" provider="swiftmailer" />
            <notifire:mailer name="second_mailer" provider="mailgun" api_key="api_key" domain="example.org" />

            <notifire:mailer name="default" provider="composite">
                <notifire:composite strategy="rand">
                    <notifire:provider>first_mailer</notifire:provider>
                    <notifire:provider>second_mailer</notifire:provider>
                </notifire:composite>
            </notifire:mailer>
        </notifire:email>
    </notifire:config>
</container>
