<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="fazland.notifire.builder" class="Fazland\NotifireBundle\Builder\ExtendableBuilder">
            <call method="setDispatcher">
                <argument type="service" id="event_dispatcher" />
            </call>
        </service>

        <service id="fazland.notifire.extension.core" class="Fazland\NotifireBundle\Extension\CoreExtension">
            <tag name="fazland.notifire.extension" />
        </service>
        
        <service id="fazland.notifire.handler.swiftmailer.prototype" class="Fazland\Notifire\EventSubscriber\Email\SwiftMailerHandler" abstract="true" public="false">
            <argument />
            <argument />
        </service>

        <service id="fazland.notifire.handler.twilio.prototype" class="Fazland\Notifire\EventSubscriber\Sms\TwilioHandler" abstract="true" public="false">
            <argument />
            <argument />
        </service>

        <service id="fazland.notifire.handler.mailgun.prototype" class="Fazland\Notifire\EventSubscriber\Email\MailgunHandler" abstract="true" public="false">
            <argument />
            <argument />
        </service>
    </services>
</container>
